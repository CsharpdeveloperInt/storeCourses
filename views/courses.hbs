<h3>Курсы</h3>

{{#if courses.length}}
<div class="row">
{{#each courses}}

    <div class="col s2 ">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}">
         
        </div>
        <div class="card-content">
             <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a target="_blank" href="/courses/{{_id}} ">Открыть курс</a>
          <hr>
          {{#if @root.isAuth}}
          {{#ifeq userId._id @root.userId}}
            <a target="_blank" href="/courses/{{_id}}/edit?allow=true ">Редактировать курс</a>
            <hr>
           {{/ifeq}}
          <form action="/card/add" method="POST">
            <input type="hidden" name="_csrf" value="{{@root.csurf}}">
            <input type="hidden" name='id' value='{{_id}}'>
            <button class="btn btn-primary" type="submit">Купить</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>

{{/each}}
  </div>
{{else}}
<p>Курсов пока нет</p>
{{/if}}