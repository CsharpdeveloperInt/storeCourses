<h1>Корзина</h1>
<div id="card">
{{#if courses.length}}
    <table>
      <thead>
          <tr>
              <th>Название</th>
              <th>Количество</th>
              <th>Действия</th>
          </tr>
          <tbody>
              {{#each courses}}
              <tr>
                  <td>{{title}}</td>
                  <td>{{count}}</td>
                  <td><button class="btn btn-small js-remove" data-csrf="{{@root.csurf}}" data-id="{{id}}">Удалить</button></td>
              </tr>
              {{/each}}
          </tbody>
      </thead>
    </table>
    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
       <input type="hidden" name="_csrf" value="{{@root.csurf}}">
        <button type="submit" class="btn btn-warning">Сделать заказ</button>
    </form>
{{else}}
<p>Корзина пуста</p>
{{/if}}
</div>